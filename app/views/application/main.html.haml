#main{'ng-app':'Calories','ng-controller':'ApplicationController'}
  %nav.navbar.navbar-default
    .container
      .navbar-header
        %button.navbar-toggle.collapsed{"aria-controls":"bs-navbar", "aria-expanded":"false", "data-target":"nav.navbar-collapse", "data-toggle":"collapse", type:"button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to 'Calories', '/#/', class: 'navbar-brand'
      %nav.collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-left{'ng-show':'current_user'}
          %li{'ng-show':"current_user.role && current_user.role != 'regular'"}
            = link_to('Manage Users', '#', 'ng-href': '/#/users', role: 'button')
        %ul.nav.navbar-nav.navbar-right{'ng-show':'current_user'}
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', 'data-toggle': 'dropdown', role: 'button', 'aria-haspopup':"true", 'aria-expanded':"false" do
              {{current_user.email}}
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to('My Profile', '#', 'ng-href': "/#/profile/edit")
              %li{role:"separator", class:"divider"}
              %li
                = link_to('Log Out', '#', 'ng-click':'sign_out()', 'ng-href': "#")
        %ul.nav.navbar-nav.navbar-right{'ng-hide':'current_user'}
          %li= link_to('Log in', '#', 'ng-href': "/#/session/new")
  .container
    %ng-view{'ng-show':'current_user || ready'}
